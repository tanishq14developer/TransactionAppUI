<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif"
        android:text="Hi, Tito!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/bell"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="75dp"
        android:src="@drawable/ic_baseline_notifications_24" />

    <TextView
        android:id="@+id/manage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/intro"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:text="Manage your finances to stable!"
        android:textColor="#F3F6F4"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/manage"
        android:layout_marginEnd="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/first">



        <TextView
            android:id="@+id/my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="My Balance"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="$ 7000"
            android:textColor="#84d4a8"
            android:textStyle="bold" />

        <View
            android:id="@+id/line"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/my"
            android:background="#DAD0D4" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_round_transform_24" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Transfer" />
        </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1">
               <ImageView
                   android:id="@+id/imageView3"
                   android:layout_width="35dp"
                   android:layout_height="39dp"
                   android:layout_marginStart="30dp"
                   android:layout_marginTop="60dp"
                   android:src="@drawable/ic_baseline_system_update_alt_24" />
               <TextView
                   android:id="@+id/textView4"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="25dp"
                   android:singleLine="true"
                   android:text="Received" />

           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="63dp"
                    android:src="@drawable/ic_outline_add_box_24" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:singleLine="true"
                    android:text="Fill Balance" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="63dp"
                    android:src="@drawable/ic_outline_article_24" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:layout_marginStart="25dp"
                    android:text="Others"/>

            </LinearLayout>
       </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Finalincome"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@id/navigation"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/income">

        <TextView
            android:id="@+id/income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="60dp"
            android:text="Income"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/income"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="$4,500.000"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_below="@id/amount"
            android:layout_marginStart="25dp"
            android:max="100"
            android:progress="75"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_below="@id/navigation"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/income">

        <TextView
            android:id="@+id/spending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="60dp"
            android:text="Spending"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spending"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="$5,000.000"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:theme="@style/ProgressBarStyle"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/money"
            android:layout_marginStart="25dp"
            android:max="100"
            android:progress="25" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/transfer"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_below="@id/Finalincome"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/transfer">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:text="Transfer Money"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:drawableStart="@drawable/ic_baseline_add_circle_24"
            android:paddingRight="20dp"
            android:text="Send money"
            android:textColor="#09acfe"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transfer"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Transaction Lists"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/transaction"
        android:layout_above="@id/bttmnavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@id/transaction"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/transfer">

        <ImageView
            android:id="@+id/sketch"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_sketch_logo" />

        <TextView
            android:id="@+id/namecom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/sketch"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:text="Sketch App"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namecom"
            android:layout_alignStart="@id/sketch"
            android:layout_marginStart="45dp"
            android:text="Subscription Team Licence" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:text="-$599"
            android:textColor="#f7acb0"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_below="@id/t1"
        android:layout_marginStart="25dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/transfer">


        <ImageView
            android:id="@+id/Figma"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_figma_logo" />

        <TextView
            android:id="@+id/figma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/Figma"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:text="Figma Pro"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/figmalicense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/figma"
            android:layout_alignStart="@id/Figma"
            android:layout_marginStart="45dp"
            android:text="Professional Licence" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:text="-$77"
            android:textColor="#f7acb0"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bttmnavigation"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:background="@drawable/bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/navhome"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_baseline_home_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pie"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_baseline_pie_chart_24" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/addbg"
                    android:src="@drawable/ic_round_add_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_baseline_account_balance_wallet_24" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:baselineAlignBottom="true"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_baseline_person_24" />

            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="31dp"
        android:src="@drawable/ic_baseline_person_outline_24" />




</RelativeLayout>